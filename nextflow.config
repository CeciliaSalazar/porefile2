
profiles {

	standard {
		process.executor = 'local'
		process.cpus = 8
		process.container = "shub://iferres/singuarity_nextflow:long16S"
		singularity.enabled = true
		singularity.autoMounts = false
		singularity.runOptions = "-B /mnt"
        	report.enabled = true
	}

	nagual {
		process.executor = 'local'
		process.cpus = 24
		process.container = "shub://iferres/singuarity_nextflow:long16S"
		singularity.enabled = true
		singularity.autoMounts = false
		singularity.runOptions = "-B /mnt/ubi"
	}

	
}

